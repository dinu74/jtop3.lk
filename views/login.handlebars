<body >
<style>
body{
  background-size: cover;
  Background-image: url(https://thumbs.gfycat.com/WateryWavyElk-max-1mb.gif);
}
</style>
<div class="jumbotron" style="width: 469px; height: 425px; padding: 38px; margin-left: 313px; margin-top: 41px; opacity:0.4;">
      <h2 class="login-heading"><span class="fa fa-sign-in"></span> Login to your Account</h2>
<br>
      <form action="/users/login" method="post">
        <div class="form-group">
          <label>Email</label>
          <input autofocus type="email" class="form-control" name="email" placeholder="Email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <br>
        <button type="submit" class="btn btn-success">Submit</button>

        <p>Need an account? <a href="/users/register">Signup</a> Or go <a href="/">home</a></p>
              {{#if success_msg}}
              <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}

              {{#if error_msg}}
              <div class="alert alert-danger">{{error_msg}}</div>
              {{/if}}

              {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
              {{/if}}



      </form>
</div>
</body>
